/* 멤버 컬러 토큰 */
[data-user="el"] {
  --user-color: #CFCFD4; /* 다크 모드 */
}
[data-user="el"][data-theme="light"] {
  --user-color: #333434; /* 라이트 모드 */
}
[data-user="ot"] {
  --user-color: #FEFDF6; /* 다크 모드 */
}
[data-user="ot"][data-theme="light"] {
  --user-color: #D7CBBF; /* 라이트 모드 */
}

@layer components {
  /* 1. 입력 필드 (Input, Select) */
  .input-base {
    /* Tailwind 유틸리티만 @apply 사용 */
    @apply w-full px-4 py-2 rounded-lg border outline-none;
    
    /* 커스텀 변수는 표준 CSS로 분리 (에러 방지) */
    border-color: var(--border-subtle);
    background-color: var(--surface-2);
    color: var(--text-base) !important;
  }
  
  /* [규칙] Hover는 Focus가 없을 때만 적용 */
  .input-base:hover:not(:focus):not(:focus-within) {
    border-color: var(--hover-point);
  }
  
  /* [규칙] Focus는 최우선 (Brand Pink) */
  .input-base:focus, 
  .input-base:focus-within,
  .input-base[aria-expanded="true"] { /* 팝업 열림 상태 포함 */
    border-color: var(--brand-pink) !important;
    color: var(--text-base) !important; /* 포커스 시에도 텍스트 색상 유지 */
  }

  /* 2. 아이콘 버튼 (X버튼, 달력 등) */
  .btn-icon {
    @apply flex items-center justify-center border-none cursor-pointer;
    background-color: transparent;
    color: var(--text-muted);
  }
  /* Hover: 포커스가 없을 때만 적용 */
  .btn-icon:hover:not(:focus):not(:focus-visible) {
    background-color: transparent;
    color: var(--hover-point);
  }
  /* Focus: 최우선 (Brand Pink) */
  .btn-icon:focus, 
  .btn-icon:focus-visible {
    background-color: transparent;
    color: var(--brand-pink);
    outline: none;
  }
  /* Focus + Hover: 포커스 색상 유지 */
  .btn-icon:focus:hover,
  .btn-icon:focus-visible:hover {
    background-color: transparent;
    color: var(--brand-pink);
  }
  /* 내부 아이콘도 동일한 규칙 적용 */
  .btn-icon:hover:not(:focus):not(:focus-visible) .lucide-icon {
    color: var(--hover-point);
  }
  .btn-icon:focus .lucide-icon,
  .btn-icon:focus-visible .lucide-icon {
    color: var(--brand-pink);
  }
  .btn-icon:focus:hover .lucide-icon,
  .btn-icon:focus-visible:hover .lucide-icon {
    color: var(--brand-pink);
  }

  /* 3. 태그/칩 (장르 선택) */
  .tag-chip {
    @apply inline-flex items-center pl-0 pr-3 py-1 rounded-full cursor-pointer text-base bg-transparent;
    border: none;
    color: var(--text-base);
  }
  /* 장르 이름 텍스트는 호버 효과 없음 (삭제 버튼만 효과 적용) */
  .tag-chip:hover:not(.selected) {
    /* 텍스트 색상 변경 제거 */
  }
  /* 선택된 태그는 Hover 색상 간섭 없이 무조건 Pink */
  .tag-chip.selected,
  .tag-chip[data-selected="true"] {
    background-color: var(--brand-pink) !important;
    border: none !important;
    color: white !important;
  }

  /* 4. 카드 (애니메이션 완전 제거) */
  .card-base {
    @apply border rounded-lg;
    border-color: var(--border-subtle);
    background-color: var(--surface-1);
  }
  /* transform, translate 등 위치 이동 속성 금지 */
  .card-base.card-interactive:hover {
    border-color: var(--hover-point);
    /* transform: translateY(-2px);  <-- 삭제됨 */
  }
  
  /* 5. 링크 (텍스트) */
  .text-link {
    @apply no-underline cursor-pointer;
    color: var(--text-base);
  }
  .text-link:hover {
    color: var(--hover-point);
    text-decoration: underline;
  }
  .text-link:focus,
  .text-link:focus-visible {
    color: var(--brand-pink);
    text-decoration: underline;
    outline: none;
  }
  .text-link:focus:hover,
  .text-link:focus-visible:hover {
    color: var(--brand-pink);
    text-decoration: underline;
  }
}

/* 미디어 업로드 영역 스타일 */
.upload-zone {
  border-style: dashed;
  border-color: var(--border-subtle);
  transition: border-color 0.2s, background-color 0.2s;
}

.upload-zone:hover:not(:focus):not(:focus-visible),
.upload-zone[data-dragging="true"]:not(:focus):not(:focus-visible) {
  border-color: var(--hover-point);
  background-color: color-mix(in srgb, var(--hover-point) 5%, transparent);
}

/* 업로드 영역 호버 시 아이콘 및 텍스트 색상 변경 (세트 개념) */
.upload-zone:hover:not(:focus):not(:focus-visible) .lucide-icon,
.upload-zone[data-dragging="true"]:not(:focus):not(:focus-visible) .lucide-icon {
  color: var(--hover-point) !important;
}

.upload-zone:hover:not(:focus):not(:focus-visible) span,
.upload-zone[data-dragging="true"]:not(:focus):not(:focus-visible) span {
  color: var(--hover-point) !important;
}

/* 업로드 영역 포커스 효과 */
.upload-zone:focus,
.upload-zone:focus-visible {
  border-color: var(--brand-pink) !important;
  background-color: color-mix(in srgb, var(--brand-pink) 5%, transparent) !important;
  outline: none !important;
  box-shadow: none !important;
}

/* 업로드 영역 포커스 시 아이콘 및 텍스트 색상 변경 (세트 개념) - 전역 규칙보다 우선 */
.upload-zone:focus .lucide-icon,
.upload-zone:focus-visible .lucide-icon,
.upload-zone:focus-within .lucide-icon,
.upload-zone:focus svg.lucide-icon,
.upload-zone:focus-visible svg.lucide-icon,
.upload-zone:focus-within svg.lucide-icon {
  color: var(--brand-pink) !important;
}

.upload-zone:focus span,
.upload-zone:focus-visible span,
.upload-zone:focus-within span {
  color: var(--brand-pink) !important;
}

.upload-zone:focus:hover,
.upload-zone:focus-visible:hover {
  border-color: var(--brand-pink) !important;
  background-color: color-mix(in srgb, var(--brand-pink) 5%, transparent) !important;
}

/* 업로드 영역 포커스+호버 시 아이콘 및 텍스트 색상 유지 (세트 개념) - 전역 규칙보다 우선 */
.upload-zone:focus:hover .lucide-icon,
.upload-zone:focus-visible:hover .lucide-icon,
.upload-zone:focus-within:hover .lucide-icon,
.upload-zone:focus:hover svg.lucide-icon,
.upload-zone:focus-visible:hover svg.lucide-icon,
.upload-zone:focus-within:hover svg.lucide-icon {
  color: var(--brand-pink) !important;
}

.upload-zone:focus:hover span,
.upload-zone:focus-visible:hover span,
.upload-zone:focus-within:hover span {
  color: var(--brand-pink) !important;
}

/* 라이트 모드 업로드 영역 호버/포커스 효과 (다크 모드와 동일) */
[data-theme="light"] .upload-zone:hover:not(:focus):not(:focus-visible),
[data-theme="light"] .upload-zone[data-dragging="true"]:not(:focus):not(:focus-visible) {
  border-color: var(--hover-point);
  background-color: color-mix(in srgb, var(--hover-point) 5%, transparent);
}

[data-theme="light"] .upload-zone:hover:not(:focus):not(:focus-visible) .lucide-icon,
[data-theme="light"] .upload-zone[data-dragging="true"]:not(:focus):not(:focus-visible) .lucide-icon {
  color: var(--hover-point) !important;
}

[data-theme="light"] .upload-zone:hover:not(:focus):not(:focus-visible) span,
[data-theme="light"] .upload-zone[data-dragging="true"]:not(:focus):not(:focus-visible) span {
  color: var(--hover-point) !important;
}

[data-theme="light"] .upload-zone:focus,
[data-theme="light"] .upload-zone:focus-visible {
  border-color: var(--brand-pink) !important;
  background-color: color-mix(in srgb, var(--brand-pink) 5%, transparent) !important;
  outline: none !important;
  box-shadow: none !important;
}

[data-theme="light"] .upload-zone:focus .lucide-icon,
[data-theme="light"] .upload-zone:focus-visible .lucide-icon,
[data-theme="light"] .upload-zone:focus-within .lucide-icon,
[data-theme="light"] .upload-zone:focus svg.lucide-icon,
[data-theme="light"] .upload-zone:focus-visible svg.lucide-icon,
[data-theme="light"] .upload-zone:focus-within svg.lucide-icon {
