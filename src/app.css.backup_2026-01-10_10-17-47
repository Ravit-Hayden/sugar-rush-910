/* ============================================================
   커스텀 스크롤바 강제 적용 (.custom-list-scrollbar)
   ============================================================ */
/* 1. 커스텀 스크롤바 컨테이너 */
.custom-list-scrollbar {
  overflow-y: auto; /* 내용이 넘칠 때만 스크롤바 표시 */
  scrollbar-width: thin; /* Firefox: thin으로 최소화 (호버 시 두꺼워짐 최소화) */
  scrollbar-color: color-mix(in srgb, var(--hover-point) 30%, transparent) transparent; /* Firefox (Dark) */
}

/* 2. Webkit 스크롤바 전체 크기 */
.custom-list-scrollbar::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

/* 3. [핵심] 화살표 버튼 공간 완전 제거 */
.custom-list-scrollbar::-webkit-scrollbar-button {
  display: none;
  width: 0;
  height: 0;
  background: transparent;
}
.custom-list-scrollbar::-webkit-scrollbar-corner {
  display: none;
}

/* 4. 트랙 (투명) */
.custom-list-scrollbar::-webkit-scrollbar-track {
  background: transparent;
  margin: 0;
}

/* 5. 썸 (막대) - 브랜드 포인트 스타일 (Dark Mode) */
.custom-list-scrollbar::-webkit-scrollbar-thumb {
  background-color: color-mix(in srgb, var(--hover-point) 30%, transparent);
  border: 2px solid transparent; /* 여백 효과 */
  background-clip: padding-box;
  border-radius: 4px;
}
.custom-list-scrollbar::-webkit-scrollbar-thumb:hover {
  background-color: var(--hover-point);
}

/* 6. 라이트 모드 오버라이드 (Light Mode) */
[data-theme="light"] .custom-list-scrollbar {
  scrollbar-color: color-mix(in srgb, var(--hover-point) 30%, transparent) transparent; /* Firefox (Light) */
}
[data-theme="light"] .custom-list-scrollbar::-webkit-scrollbar-thumb {
  background-color: color-mix(in srgb, var(--hover-point) 30%, transparent);
}
[data-theme="light"] .custom-list-scrollbar::-webkit-scrollbar-thumb:hover {
  background-color: var(--hover-point);
}

